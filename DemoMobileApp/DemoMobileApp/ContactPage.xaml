<?xml version="1.0" encoding="utf-8" ?>
<ContentPage Title="Contacts" xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DemoMobileApp.ContactPage">
    <ContentPage.Content>
        <ListView x:Name="lvContacts" ItemSelected="lvContacts_ItemSelected"  >
            <ListView.ItemTemplate>
                <DataTemplate >
                    <TextCell Text="{Binding Name}" Detail="{Binding Status}" ></TextCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </ContentPage.Content>
</ContentPage>