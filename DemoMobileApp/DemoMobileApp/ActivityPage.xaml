<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DemoMobileApp.ActivityPage">
    <ContentPage.Content>
        <ListView x:Name="lvActivity" ItemSelected="lvActivity_ItemSelected">
            <ListView.ItemTemplate>
                <DataTemplate>

                    <ViewCell>
                        <StackLayout Orientation="Horizontal">
                            <Image  Source="{Binding url}"      />
                            <Label Text="{Binding Description}" VerticalOptions="Center" HorizontalOptions="Center"></Label>    
                        </StackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </ContentPage.Content>
</ContentPage>