<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DemoMobileApp.LayoutTwo">
    <ContentPage.Content>
        <StackLayout>
            <StackLayout Orientation="Vertical" Padding="10, 20, 0, 15">
                <Label Text="nyc_photograper"/>    
            </StackLayout>
            
            <Image Source="http://lorempixel.com/1920/1080/nature/3/" />
            <StackLayout Orientation="Horizontal" Padding="10, 10, 0, 20" Spacing="20">
                <Label Text="Like" TextColor="#1dabf0"></Label>
                <Label Text="Share" TextColor="#1dabf0"></Label>
                <Label Text="Comment" TextColor="#1dabf0"></Label>
            </StackLayout>
            <StackLayout Orientation="Vertical" Padding="10, 10, 0, 0" Spacing="10">
                <BoxView Color="#f0f0f0" HeightRequest="1"  />
                <Label Text="700 Likes" FontAttributes="Bold" ></Label>
                <Label Text="This is shot yesterday Skanor, Sweden, when driving home, form a couple of days of work in Denmark" />
            </StackLayout>
            
        </StackLayout>
    </ContentPage.Content>
</ContentPage>