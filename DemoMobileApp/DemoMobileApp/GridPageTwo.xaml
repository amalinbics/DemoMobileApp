<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DemoMobileApp.GridPageTwo" BackgroundColor="#127ac7">
    <Grid Padding="30"  >
        <Grid.RowDefinitions>
            <RowDefinition Height="*"  />
            <RowDefinition Height="40" />
            <RowDefinition Height="40" />
        </Grid.RowDefinitions>

        <StackLayout Grid.Row="0" VerticalOptions="Center">
            <Label  Text="Welcome to Xamarin" FontSize="30" FontAttributes="Bold" HorizontalOptions="Center" TextColor="#fff" />
            <Label Text="Cross-platform apps made easy" FontSize="18" HorizontalOptions="Center" TextColor="#fff"/>
        </StackLayout>

        <Button Grid.Row="1" Text="Login" BackgroundColor="#1dabf0" BorderRadius="8" TextColor="#fff" ></Button>
        <Button Grid.Row="2" Text="Register" BackgroundColor="#1dabf0" BorderRadius="8" TextColor="#fff" ></Button>
        

    </Grid>
</ContentPage>